        "items/matter_cluster.ts",
        "items/resource.ts",
        "items/singularity.ts",
        "items/tools/sword.ts",
        "items/tools/bow.ts",
        "items/tools/pickaxe.ts",
        "items/tools/shovel.ts",
        "items/tools/axe.ts",
        "items/tools/hoe.ts",
        "items/armor.ts",
        "items/tools/skull_sword.ts",
        "items/pearl.ts",
        "items/food.ts",
        "blocks/crafting.ts",
        "blocks/resource.ts",
        "blocks/collector.ts",
        "blocks/compressor.ts",
        "footer.ts",
        "api.ts",
        "compat/RecipeViewer.ts"
    ],
    "exclude": [
        "../tools/declarations/preloader.d.ts",
        "../tools/declarations/AvaritiaAPI.d.ts"
